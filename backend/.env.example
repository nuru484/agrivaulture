# ========== SERVER CONFIG ==========
PORT=8080               # Server port (e.g., 3000, 8080)
NODE_ENV=development    # Environment (development|production)
CORS_ACCESS=http://localhost:5173  # Frontend URL for CORS

# ========== DATABASE ==========
DATABASE_URL=postgresql://user:password@localhost:5432/db_name  # PostgreSQL connection string

# ========== CLOUDINARY ==========
CLOUDINARY_CLOUD_NAME=your_cloud_name      # From Cloudinary dashboard
CLOUDINARY_API_KEY=123456789012345        # From Cloudinary dashboard
CLOUDINARY_API_SECRET=your_api_secret     # From Cloudinary dashboard

# ========== SMS (ARKESEL) ==========
ARKESEL_API_KEY=your_api_key_here         # Arkesel API key
ARKESEL_SENDER_ID=YourBrandName           # Approved sender name (e.g., "AgriVault")
ARKESEL_SMS_URL=https://sms.arkesel.com/api/v2/sms/send  # Arkesel SMS endpoint

# ========== EMAIL (SMTP) ==========
SMTP_USER=your_email@gmail.com    # SMTP login email
SMTP_PASSWORD=app_password        # App password (not email password)
SMTP_HOST=smtp.gmail.com          # SMTP server (e.g., smtp.gmail.com)
SMTP_PORT=587                     # SMTP port (587 for TLS)
SMTP_SECURE=false                 # TLS (false) or SSL (true)

# ========== AUTH (JWT) ==========
ACCESS_TOKEN_SECRET=your_access_token_secret_here   # 64+ chars random string
ACCESS_TOKEN_EXPIRY=30m            # Token expiry (e.g., 15m, 1h)
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here # 64+ chars random string
REFRESH_TOKEN_EXPIRY=7d            # Refresh token expiry (e.g., 7d, 30d)


# ========== OPENWEATHER ==========
OPENWEATHER_API_KEY=your_openweather_api_key_here  # OpenWeather API key
