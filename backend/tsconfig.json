{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@validations/*": ["src/validations/*"]
    }
  },
  "include": ["./src/**/*", "src/validations/validation-error-handler.ts", "types"],
  "exclude": ["node_modules", "build"]
}
